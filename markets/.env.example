# Database Configuration
DB_NAME=openbb_data
DB_USER=openbb
DB_PASSWORD=your_secure_password_here

# CORS Configuration for API
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5010,http://localhost:3000

# Production example:
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# API Security Configuration
# Enable API key authentication (set to "true" in production)
API_KEY_ENABLED=false

# API Keys (comma-separated list of valid keys)
# Generate secure keys using: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEYS=your-api-key-1,your-api-key-2

# Production example (generate unique keys):
# API_KEY_ENABLED=true
# API_KEYS=supersecretkey123abc,anothersecretkey456def
