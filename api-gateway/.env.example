# =============================================================================
# Data Acuity API Gateway - Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your environment

# -----------------------------------------------------------------------------
# General Settings
# -----------------------------------------------------------------------------
ENVIRONMENT=production
DEBUG=false
DOMAIN=dataacuity.co.za
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Gateway Database (PostgreSQL)
# -----------------------------------------------------------------------------
GATEWAY_DB_PASSWORD=your_secure_password_here

# -----------------------------------------------------------------------------
# Keycloak Authentication
# -----------------------------------------------------------------------------
KEYCLOAK_URL=http://keycloak:8080
KEYCLOAK_REALM=dataacuity
KEYCLOAK_CLIENT_ID=api-gateway
KEYCLOAK_CLIENT_SECRET=your_client_secret_here

# -----------------------------------------------------------------------------
# Service Mesh
# -----------------------------------------------------------------------------
SERVICE_MESH_ENABLED=true

# -----------------------------------------------------------------------------
# CORS Origins (JSON array)
# -----------------------------------------------------------------------------
CORS_ORIGINS=["https://dataacuity.co.za","https://www.dataacuity.co.za","https://markets.dataacuity.co.za"]

# -----------------------------------------------------------------------------
# Grafana (API Analytics Dashboard)
# -----------------------------------------------------------------------------
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# -----------------------------------------------------------------------------
