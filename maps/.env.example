# DataAcuity Maps - Environment Variables
# Copy this file to .env and fill in secure values

# REQUIRED - Database password (change from the old default!)
# Note: Used by PostgreSQL directly, avoid special chars like @ and $
MAPS_DB_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# REQUIRED - Full database URL (URL-encode special characters in password)
# @ -> %40, $ -> %24, # -> %23, etc.
DATABASE_URL=postgresql://maps:YOUR_URL_ENCODED_PASSWORD@maps_db:5432/maps

# REQUIRED if using geocoding profile
NOMINATIM_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# Production settings
ENVIRONMENT=production
ALLOWED_ORIGINS=https://maps.dataacuity.co.za

# Optional API keys
HERE_API_KEY=
TOMTOM_API_KEY=
MAPILLARY_ACCESS_TOKEN=
ESKOMSEPUSH_TOKEN=
MAPS_API_KEY=
TRANSIT_API_KEY=
