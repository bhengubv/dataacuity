{
  "version": 8,
  "name": "DataAcuity South Africa",
  "sources": {
    "protomaps": {
      "type": "vector",
      "url": "/data/south-africa.json",
      "attribution": "<a href=\"https://protomaps.com\">Protomaps</a> | <a href=\"https://openstreetmap.org\">OSM</a>"
    }
  },
  "glyphs": "https://protomaps.github.io/basemaps-assets/fonts/{fontstack}/{range}.pbf",
  "sprite": "https://protomaps.github.io/basemaps-assets/sprites/v4/light",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f8f4f0"
      }
    },
    {
      "id": "earth",
      "type": "fill",
      "source": "protomaps",
      "source-layer": "earth",
      "paint": {
        "fill-color": "#f5f5f3"
      }
    },
    {
      "id": "landcover-grass",
      "type": "fill",
      "source": "protomaps",
      "source-layer": "landcover",
      "filter": ["==", "class", "grass"],
      "paint": {
        "fill-color": "#d8e8c8",
        "fill-opacity": 0.6
      }
    },
    {
      "id": "landcover-wood",
      "type": "fill",
      "source": "protomaps",
      "source-layer": "landcover",
      "filter": ["==", "class", "wood"],
      "paint": {
        "fill-color": "#a8d4a0",
        "fill-opacity": 0.5
      }
    },
    {
      "id": "landuse-park",
      "type": "fill",
      "source": "protomaps",
      "source-layer": "landuse",
      "filter": ["in", "class", "park", "grass"],
      "paint": {
        "fill-color": "#c8e6c8",
        "fill-opacity": 0.5
      }
    },
    {
      "id": "landuse-residential",
      "type": "fill",
      "source": "protomaps",
      "source-layer": "landuse",
      "filter": ["==", "class", "residential"],
      "paint": {
        "fill-color": "#f0e8e0",
        "fill-opacity": 0.4
      }
    },
    {
      "id": "landuse-industrial",
      "type": "fill",
      "source": "protomaps",
      "source-layer": "landuse",
      "filter": ["in", "class", "industrial", "commercial"],
      "paint": {
        "fill-color": "#e8e0d8",
        "fill-opacity": 0.4
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "protomaps",
      "source-layer": "water",
      "paint": {
        "fill-color": "#aad3df"
      }
    },
    {
      "id": "water-outline",
      "type": "line",
      "source": "protomaps",
      "source-layer": "water",
      "paint": {
        "line-color": "#88c0d8",
        "line-width": 0.5
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "protomaps",
      "source-layer": "buildings",
      "minzoom": 13,
      "paint": {
        "fill-color": "#d9d0c9",
        "fill-opacity": 0.7
      }
    },
    {
      "id": "building-outline",
      "type": "line",
      "source": "protomaps",
      "source-layer": "buildings",
      "minzoom": 14,
      "paint": {
        "line-color": "#c0b8b0",
        "line-width": 0.5
      }
    },
    {
      "id": "roads-tunnel",
      "type": "line",
      "source": "protomaps",
      "source-layer": "roads",
      "filter": ["==", "brunnel", "tunnel"],
      "paint": {
        "line-color": "#d0d0d0",
        "line-width": ["interpolate", ["linear"], ["zoom"], 10, 1, 14, 3, 18, 8],
        "line-dasharray": [2, 2]
      }
    },
    {
      "id": "roads-minor",
      "type": "line",
      "source": "protomaps",
      "source-layer": "roads",
      "filter": ["all", ["in", "class", "minor", "service", "path"], ["!=", "brunnel", "tunnel"]],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ffffff",
        "line-width": ["interpolate", ["linear"], ["zoom"], 12, 0.5, 14, 2, 18, 5]
      }
    },
    {
      "id": "roads-tertiary",
      "type": "line",
      "source": "protomaps",
      "source-layer": "roads",
      "filter": ["all", ["==", "class", "tertiary"], ["!=", "brunnel", "tunnel"]],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ffffff",
        "line-width": ["interpolate", ["linear"], ["zoom"], 10, 1, 14, 4, 18, 10]
      }
    },
    {
      "id": "roads-secondary-casing",
      "type": "line",
      "source": "protomaps",
      "source-layer": "roads",
      "filter": ["all", ["==", "class", "secondary"], ["!=", "brunnel", "tunnel"]],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#c8b898",
        "line-width": ["interpolate", ["linear"], ["zoom"], 8, 1.5, 14, 6, 18, 14]
      }
    },
    {
      "id": "roads-secondary",
      "type": "line",
      "source": "protomaps",
      "source-layer": "roads",
      "filter": ["all", ["==", "class", "secondary"], ["!=", "brunnel", "tunnel"]],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#f9f4e8",
        "line-width": ["interpolate", ["linear"], ["zoom"], 8, 1, 14, 4, 18, 12]
      }
    },
    {
      "id": "roads-primary-casing",
      "type": "line",
      "source": "protomaps",
      "source-layer": "roads",
      "filter": ["all", ["==", "class", "primary"], ["!=", "brunnel", "tunnel"]],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#c0a080",
        "line-width": ["interpolate", ["linear"], ["zoom"], 6, 1, 10, 3, 14, 8, 18, 16]
      }
    },
    {
      "id": "roads-primary",
      "type": "line",
      "source": "protomaps",
      "source-layer": "roads",
      "filter": ["all", ["==", "class", "primary"], ["!=", "brunnel", "tunnel"]],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#fce8b8",
        "line-width": ["interpolate", ["linear"], ["zoom"], 6, 0.5, 10, 2, 14, 6, 18, 14]
      }
    },
    {
      "id": "roads-highway-casing",
      "type": "line",
      "source": "protomaps",
      "source-layer": "roads",
      "filter": ["all", ["in", "class", "motorway", "trunk"], ["!=", "brunnel", "tunnel"]],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#cc8833",
        "line-width": ["interpolate", ["linear"], ["zoom"], 5, 1, 10, 4, 14, 10, 18, 20]
      }
    },
    {
      "id": "roads-highway",
      "type": "line",
      "source": "protomaps",
      "source-layer": "roads",
      "filter": ["all", ["in", "class", "motorway", "trunk"], ["!=", "brunnel", "tunnel"]],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#ffd080",
        "line-width": ["interpolate", ["linear"], ["zoom"], 5, 0.5, 10, 3, 14, 8, 18, 18]
      }
    },
    {
      "id": "roads-rail",
      "type": "line",
      "source": "protomaps",
      "source-layer": "roads",
      "filter": ["==", "class", "rail"],
      "paint": {
        "line-color": "#888888",
        "line-width": ["interpolate", ["linear"], ["zoom"], 8, 0.5, 14, 2],
        "line-dasharray": [3, 3]
      }
    },
    {
      "id": "boundaries-admin-1",
      "type": "line",
      "source": "protomaps",
      "source-layer": "boundaries",
      "filter": ["==", "admin_level", 2],
      "paint": {
        "line-color": "#9090a0",
        "line-width": 1.5,
        "line-dasharray": [5, 3]
      }
    },
    {
      "id": "boundaries-admin-2",
      "type": "line",
      "source": "protomaps",
      "source-layer": "boundaries",
      "filter": ["==", "admin_level", 4],
      "minzoom": 5,
      "paint": {
        "line-color": "#b0b0c0",
        "line-width": 1,
        "line-dasharray": [3, 2]
      }
    },
    {
      "id": "place-labels-village",
      "type": "symbol",
      "source": "protomaps",
      "source-layer": "places",
      "filter": ["in", "class", "village", "hamlet", "suburb"],
      "minzoom": 11,
      "layout": {
        "text-field": "{name}",
        "text-font": ["Noto Sans Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 11, 10, 14, 12]
      },
      "paint": {
        "text-color": "#444444",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1.5
      }
    },
    {
      "id": "place-labels-town",
      "type": "symbol",
      "source": "protomaps",
      "source-layer": "places",
      "filter": ["==", "class", "town"],
      "minzoom": 8,
      "layout": {
        "text-field": "{name}",
        "text-font": ["Noto Sans Medium"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 8, 11, 14, 14]
      },
      "paint": {
        "text-color": "#333333",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    },
    {
      "id": "place-labels-city",
      "type": "symbol",
      "source": "protomaps",
      "source-layer": "places",
      "filter": ["==", "class", "city"],
      "minzoom": 5,
      "layout": {
        "text-field": "{name}",
        "text-font": ["Noto Sans Bold"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 5, 12, 10, 16, 14, 20],
        "text-transform": "uppercase",
        "text-letter-spacing": 0.1
      },
      "paint": {
        "text-color": "#222222",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    },
    {
      "id": "poi-labels",
      "type": "symbol",
      "source": "protomaps",
      "source-layer": "pois",
      "minzoom": 14,
      "layout": {
        "text-field": "{name}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 10,
        "text-offset": [0, 1.5],
        "icon-image": ["coalesce", ["image", ["get", "class"]], ["image", "marker"]]
      },
      "paint": {
        "text-color": "#666666",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    }
  ]
}
