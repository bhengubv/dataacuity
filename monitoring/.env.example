# ========================================
# DataAcuity Monitoring Stack - Environment Variables Template
# ========================================
# Copy this file to .env and update with your values

# ========================================
# GRAFANA CONFIGURATION
# ========================================
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_EMAIL=your-email@example.com
GF_USERS_ALLOW_SIGN_UP=false
GF_USERS_DEFAULT_EMAIL=your-email@example.com
GF_SERVER_ROOT_URL=https://monitor.yourdomain.com
GF_INSTALL_PLUGINS=redis-datasource

# ========================================
# DATABASE PASSWORDS
# ========================================
MARKETS_DB_PASSWORD=your_markets_db_password_here
WAREHOUSE_DB_PASSWORD=your_warehouse_db_password_here

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_ADDR_MARKETS=markets_redis:6379
REDIS_ADDR_TWENTY=twenty_redis:6379
REDIS_ADDR_AUTOMATISCH=automatisch_redis:6379

# ========================================
# PROMETHEUS CONFIGURATION
# ========================================
PROMETHEUS_RETENTION=90d
PROMETHEUS_STORAGE_PATH=/prometheus

# ========================================
# ALERTMANAGER CONFIGURATION (Optional)
# ========================================
# ALERTMANAGER_SMTP_HOST=smtp.gmail.com
# ALERTMANAGER_SMTP_PORT=587
# ALERTMANAGER_SMTP_FROM=alerts@yourdomain.com
# ALERTMANAGER_SMTP_AUTH_USERNAME=
# ALERTMANAGER_SMTP_AUTH_PASSWORD=
# ALERTMANAGER_RECEIVER_EMAIL=your-email@example.com

# ========================================
# NGINX EXPORTER CONFIGURATION
# ========================================
NGINX_SCRAPE_URI=http://dataacuity_portal:80/nginx_status

# ========================================
# NETWORK CONFIGURATION
# ========================================
EXTERNAL_NETWORK=data-warehouse_data_stack

# ========================================
# PORT MAPPINGS
# ========================================
GRAFANA_PORT=5015
PROMETHEUS_PORT=9090
LOKI_PORT=3100
NODE_EXPORTER_PORT=9100
CADVISOR_PORT=8081
POSTGRES_EXPORTER_MARKETS_PORT=9187
POSTGRES_EXPORTER_WAREHOUSE_PORT=9188
NGINX_EXPORTER_PORT=9113
REDIS_EXPORTER_MARKETS_PORT=9121
REDIS_EXPORTER_TWENTY_PORT=9122
REDIS_EXPORTER_AUTOMATISCH_PORT=9123
# ALERTMANAGER_PORT=9093
